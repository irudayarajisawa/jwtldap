RewriteEngine On    # Turn on the rewriting engine
RewriteRule ^read$ read-user.php [NC,L]
RewriteRule ^read/([0-9_-]*)$ read.php?id=$1 [NC,L]
RewriteRule ^usercreate$ create-user.php [NC,L]
RewriteRule ^userupdate$ update-user.php [NC,L]
RewriteRule ^userdelete$ delete-user.php [NC,L]

RewriteRule ^aliascreate$ create-alias.php [NC,L]
RewriteRule ^aliasread$ read-alias.php [NC,L]
RewriteRule ^aliasupdate$ update-alias.php [NC,L]
RewriteRule ^aliasdelete$ delete-alias.php [NC,L]

RewriteRule ^login$ login-user.php [NC,L]
RewriteRule ^logout$ logout-user.php [NC,L]
